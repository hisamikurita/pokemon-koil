---
import Layout from "../layouts/Layout.astro";
import logo from "../images/logo.png";
---

<Layout>
  <div class="load" data-el="load">
    <div class="load-bar" data-el="load-bar">
      <span class="load-red"></span>
      <span class="load-blue"></span>
    </div>
  </div>
  <div class="webgl" data-el="webgl"><canvas></canvas></div>
</Layout>

<script>
  import { App } from "../scripts/app.js";
  App();
</script>

<style lang="scss">
  .webgl {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    // opacity: 0;
  }

  .load {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    width: 300px;
    height: 40px;
    background-color: #536e71;
    z-index: 1;
    pointer-events: none;
  }

  .load-bar {
    display: flex;
    width: 100%;
    height: 100%;
    clip-path: polygon(0 0, 0 0, 0 100%, 0% 100%);
  }

  .load-red {
    display: block;
    width: 50%;
    height: 100%;
    background-color: #bd0316;
  }

  .load-blue {
    display: block;
    width: 50%;
    height: 100%;
    background-color: #014cb3;
  }
</style>
